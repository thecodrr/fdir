{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "lib": ["esnext"],
    "declaration": true,
    "outDir": "./dist",
    "noEmit": true,
    "esModuleInterop": true,
    "erasableSyntaxOnly": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["./src"]
}
